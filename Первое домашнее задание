// 1. Проверка username
function validateUsername(username) {
  if (typeof username !== 'string') {
    return 'username должен быть строкой';
  }
  if (username.length < 5 || username.length > 15) {
    return 'длина username от 5 до 15 символов';
  }
  return null; // ошибок нет
}

// 2. Проверка email
function validateEmail(email) {
  if (typeof email !== 'string') {
    return 'email должен быть строкой';
  }
  if (!email.includes('@')) {
    return 'email должен содержать @';
  }
  // Проверяем, что после @ есть точка
  const atIndex = email.indexOf('@');
  if (!email.includes('.', atIndex)) {
    return ' после @ должна быть точка';
  }
  return null;
}

// 3. Проверка возраста
function validateAge(age) {
  if (typeof age !== 'number' || !Number.isInteger(age)) {
    return 'Ошибка: возраст должен быть целым числом';
  }
  if (age < 18 || age > 120) {
    return 'возраст должен быть от 18 до 120';
  }
  return null;
}

// 4. Проверка согласия
function validateAgreement(isAgreed) {
  if (typeof isAgreed !== 'boolean') {
    return 'Ошибка: согласие должно быть булевым значением';
  }
  if (isAgreed !== true) {
    return 'нужно принять соглашение';
  }
  return null;
}

// 5. Проверка телефона
function validatePhone(phone) {
  if (phone === undefined) {
    return null; // если не заполнено, ошибок нет
  }
  if (typeof phone !== 'string') {
    return 'телефон должен быть строкой или undefined';
  }
  if (!phone.startsWith('+7')) {
    return 'телефон должен начинаться с +7';
  }
  if (phone.length !== 12) {
    return 'длина телефона должна быть 12 символов';
  }
  return null;
}

